<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	
	<listener>
        <listener-class>config.AppInit</listener-class>
    </listener>

	<servlet>
		<servlet-name>WelcomeController</servlet-name>
		<servlet-class>controller.WelcomeController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GameController</servlet-name>
		<servlet-class>controller.GameController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>HistoryController</servlet-name>
		<servlet-class>controller.HistoryController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>WelcomeController</servlet-name>
		<url-pattern>/welcome</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GameController</servlet-name>
		<url-pattern>/hangMan</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>HistoryController</servlet-name>
		<url-pattern>/history</url-pattern>
	</servlet-mapping>
</web-app>
