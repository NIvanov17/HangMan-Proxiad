<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">



	<bean id="wordsRepository" class="repository.WordsRepository" />

	<bean id="gameService" class="service.GameService">
		<constructor-arg ref="wordsRepository" />
	</bean>

	<bean id="welcomeController" class="controller.WelcomeController" />
	
	<bean id="gameController" class="controller.GameController">
		<property name="gameService" ref="gameService" />
        <property name="wordsRepository" ref="wordsRepository" />
	</bean>
	
	<bean id="historyController" class="controller.HistoryController">
		<constructor-arg ref="wordsRepository" />
	</bean>


</beans>